<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Favorito</h1>
      <p class="text-center lead">Crie ou edite seu favorito abaixo.</p>

      <%- include('includes/messages') %>

      <% if(favorito._id) { %>
      <form action="/favorito/edit/<%= favorito._id %>" method="POST">
      <% } else { %>
      <form action="/favorito/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Titulo</label>
          <input value="<%= favorito.titulo %>" type="text" class="form-control" name="titulo">
        </div>
        <div class="form-group">
          <label>Link</label>
          <input value="<%= favorito.link %>" type="text" class="form-control" name="link">
        </div>
        <div class="form-group">
          <label>Categoria</label>
          <input value="<%= favorito.categoria %>" type="text" class="form-control" name="categoria">
        </div>
        
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
